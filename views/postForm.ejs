<html>

<head>
    <title>SBDIV_Form</title>
</head>

<body>
    <form action="/form" enctype="multipart/form-data" method="post">
        

        <div class="rows">
            <div class="rowsTitle">Markers</div>
        </div>

        <div class="addRowDiv"><input type="button" onclick="addRow()" class="addRow" value="Add Row[+]"></div>
        <div class="submitDiv"><input type="submit" value="Submit"></div>
    </form>
</body>

<script>
    function addRow() {
        var form = document.querySelector('.rows')
        var br = document.createElement("br")

        var div = document.createElement('div')
        div.classList.add('row')

        var firstColLabel = document.createElement('label')
        firstColLabel.innerHTML = 'Title '

        var firstCol = document.createElement('input')
        firstCol.setAttribute("type", "text")
        firstCol.name = 'Title'
        firstCol.placeholder = 'Title'

        var SecondColLabel = document.createElement('label')
        SecondColLabel.innerHTML = 'Longitude '

        var SecondCol = document.createElement('input')
        SecondCol.setAttribute("type", "number")
        SecondCol.setAttribute("step", "any")
        SecondCol.name = 'Lng'
        SecondCol.placeholder = 'Longitude'

        var ThirdColLabel = document.createElement('label')
        ThirdColLabel.innerHTML = 'Latitude '

        var ThirdCol = document.createElement('input')
        ThirdCol.setAttribute("type", "number")
        ThirdCol.setAttribute("step", "any")
        ThirdCol.name = 'Lat'
        ThirdCol.placeholder = 'Latitude'

        var FourthColLabel = document.createElement('label')
        FourthColLabel.innerHTML = 'Description '

        var FourthCol = document.createElement('input')
        FourthCol.setAttribute("type", "text")
        FourthCol.name = 'Description'
        FourthCol.placeholder = 'Description'

        var deleteRowButton = document.createElement('input')
        deleteRowButton.setAttribute("type", "button")
        deleteRowButton.name = 'deleteRowButton'
        deleteRowButton.classList.add('deleteRowButton')
        deleteRowButton.value = 'Delete Row[X]'
        deleteRowButton.addEventListener("click", deleteRow)

        div.appendChild(br)
        // div.appendChild(firstColLabel)
        div.appendChild(firstCol)
        // div.appendChild(SecondColLabel)
        div.appendChild(SecondCol)
        // div.appendChild(ThirdColLabel)
        div.appendChild(ThirdCol)
        // div.appendChild(FourthColLabel)
        div.appendChild(FourthCol)
        div.appendChild(deleteRowButton)
        div.appendChild(br)

        form.appendChild(div)
    }

    function deleteRow() {
        var form = document.querySelector('.rows')
        form.removeChild(this.parentElement)
    }
</script>

